<Window x:Class="OverTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="321.311" Width="552.732">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <TabControl x:Name="tabControl" Margin="10" TabStripPlacement="Left">
            <TabItem Header="Výpočet" Height="50">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="130*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="label" Content="Príchod do práce" Grid.Column="1" HorizontalAlignment="Left" Margin="0,21,0,0" VerticalAlignment="Top" Height="26" Width="125"/>
                    <Label x:Name="label1" Content="Obed (dĺžka v minútach)" Grid.Column="1" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top" Width="144" Height="26"/>
                    <Label x:Name="label2" Content="Aktuálny čas" Grid.Column="1" HorizontalAlignment="Left" Margin="0,83,0,0" VerticalAlignment="Top" Width="125" Height="26"/>
                    <Label x:Name="label3" Content="Nadčas" Grid.Column="1" HorizontalAlignment="Left" Margin="0,144,0,0" VerticalAlignment="Top" Width="109" FontWeight="Bold" Height="26"/>
                    <TextBox x:Name="txtStartWork" Text="{Binding Path=StartWork, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="0,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TextAlignment="Center" AcceptsTab="True"/>
                    <TextBox x:Name="txtLunch" Text="{Binding Path=Lunch, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="0,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TextAlignment="Center" AcceptsTab="True"/>
                    <TextBox x:Name="txtActualTime" Text="{Binding Path=ActualTime, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="0,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TextAlignment="Center" AcceptsTab="True"/>
                    <Button x:Name="btnClear" Content="Vyčisti" Grid.Column="2" HorizontalAlignment="Left" Margin="33,219,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
                    <Label x:Name="label4" Content="od" Grid.Column="2" HorizontalAlignment="Left" Margin="56,52,0,0" VerticalAlignment="Top" Height="26" Width="24"/>
                    <TextBox x:Name="txtLunchFrom" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="80,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="45" TextAlignment="Center"/>
                    <TextBox x:Name="txtLunchTo" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="151,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="45" TextAlignment="Center"/>
                    <Label x:Name="label5" Content="do" Grid.Column="2" HorizontalAlignment="Left" Margin="127,53,0,0" VerticalAlignment="Top" Height="26" Width="24"/>
                    <Button x:Name="btnCalculate" Content="Vypočítaj" Grid.Column="2" HorizontalAlignment="Left" Margin="121,219,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="btnCalculate_Click"/>
                    <Label x:Name="lblMessage" Content="{Binding Path=Message, Mode=TwoWay}"  Grid.Column="2" HorizontalAlignment="Left" Margin="1,144,0,0" VerticalAlignment="Top" Background="White" Height="26" Width="249"/>
                </Grid>
            </TabItem>
            <TabItem Header="Platený nadčas" Height="50"/>
            <TabItem Header="Náhradko" Height="50">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
