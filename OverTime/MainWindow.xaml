<Window x:Class="OverTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="321.311" Width="552.732">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <TabControl x:Name="tabControl" Margin="10" TabStripPlacement="Left">
            <TabItem Header="Výpočet" Height="50">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="75*"/>
                        <ColumnDefinition Width="130*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="label" Content="Príchod do práce" Grid.Column="1" HorizontalAlignment="Left" Margin="0,21,0,0" VerticalAlignment="Top" Height="26" Width="125"/>
                    <Label x:Name="label1" Content="Obed (dĺžka v minútach)" Grid.Column="1" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top" Width="144" Height="26"/>
                    <Label x:Name="label2" Content="Aktuálny čas" Grid.Column="1" HorizontalAlignment="Left" Margin="0,83,0,0" VerticalAlignment="Top" Width="125" Height="26"/>
                    <Label x:Name="label3" Content="Nadčas" Grid.Column="1" HorizontalAlignment="Left" Margin="0,150,0,0" VerticalAlignment="Top" Width="109" FontWeight="Bold" Height="26"/>
                    <TextBox x:Name="txtStartWork" Text="{Binding Path=StartWork, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="0,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TextAlignment="Center" AcceptsTab="True"/>
                    <TextBox x:Name="txtLunch" Text="{Binding Path=Lunch, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="0,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TextAlignment="Center" AcceptsTab="True"/>
                    <TextBox x:Name="txtActualTime" Text="{Binding Path=ActualTime, Mode=TwoWay}" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="0,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" TextAlignment="Center" AcceptsTab="True"/>
                    <Label x:Name="label4" Content="od" Grid.Column="2" HorizontalAlignment="Left" Margin="47,52,0,0" VerticalAlignment="Top" Height="26" Width="24"/>
                    <TextBox x:Name="txtLunchFrom" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="71,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="45" TextAlignment="Center"/>
                    <TextBox x:Name="txtLunchTo" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="142,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="45" TextAlignment="Center"/>
                    <Label x:Name="label5" Content="do" Grid.Column="2" HorizontalAlignment="Left" Margin="118,53,0,0" VerticalAlignment="Top" Height="26" Width="24"/>
                    <Button x:Name="btnCalculate" Content="Vypočítaj" Grid.Column="2" HorizontalAlignment="Left" Margin="172,231,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="btnCalculate_Click" Background="#FFDDDDDD"/>
                    <Label x:Name="lblMessage" Content="{Binding Path=Message, Mode=TwoWay}"  Grid.Column="2" HorizontalAlignment="Left" Margin="1,150,0,0" VerticalAlignment="Top" Background="White" Height="26" Width="249" FontWeight="Bold"/>
                    <Button x:Name="btnRefreshActualTime" Content="Refresh" Grid.Column="2" HorizontalAlignment="Left" Margin="198,89,0,0" VerticalAlignment="Top" Width="45" Click="btnRefreshActualTime_Click"/>
                    <Button x:Name="btnClear" Content="Vyčisti" Grid.Column="2" HorizontalAlignment="Left" Margin="1,231,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="btnClear_Click"/>
                    <Label x:Name="label10" Content="___________________________________________________________________________________________________________________________________________________________" Grid.Column="1" Margin="1,115,17,0" VerticalAlignment="Top" Grid.ColumnSpan="2" FontWeight="Bold"/>
                    <Button x:Name="btnSave" Content="Ulož" Grid.Column="2" HorizontalAlignment="Left" Margin="87,231,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Platený nadčas" Height="50">
                <Grid Background="White">
                    <Label x:Name="label8" Content="Email" Margin="17,23,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="38"/>
                    <TextBox x:Name="txtEmailPayOvertime" Margin="89,23,13,0" TextWrapping="Wrap" Text="@" Background="{x:Null}" Height="29" VerticalAlignment="Top"/>
                    <Label x:Name="label9" Content="Správa" HorizontalAlignment="Left" Margin="17,64,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtMessagePayOvertime" Margin="89,67,13,42" TextWrapping="Wrap" RenderTransformOrigin="0.238,-0.243" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    <Button x:Name="btnSendPayOvertime" Content="Odošli" HorizontalAlignment="Left" Margin="337,231,0,0" VerticalAlignment="Top" Width="75" Click="btnSendPayOvertime_Click"/>
                    <Button x:Name="btnSavePayOvertime" Content="Ulož" HorizontalAlignment="Left" Margin="252,231,0,0" VerticalAlignment="Top" Width="75" Click="btnSavePayOvertime_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Náhradko" Height="50">
                <Grid Background="White">
                    <Label x:Name="label6" Content="Email" Margin="17,23,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="38"/>
                    <TextBox x:Name="txtEmailOvertime" Margin="89,23,13,0" TextWrapping="Wrap" Text="@" Background="{x:Null}" Height="29" VerticalAlignment="Top"/>
                    <Label x:Name="label7" Content="Správa" HorizontalAlignment="Left" Margin="17,64,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtMessageOvertime" Margin="89,67,13,42" TextWrapping="Wrap" RenderTransformOrigin="0.238,-0.243" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
                    <Button x:Name="btnSendOvertime" Content="Odošli" HorizontalAlignment="Left" Margin="338,231,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button x:Name="btnSaveOvertime" Content="Ulož" HorizontalAlignment="Left" Margin="253,231,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
